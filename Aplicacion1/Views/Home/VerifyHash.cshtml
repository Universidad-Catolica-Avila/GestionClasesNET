@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h3 class="text-center">VERIFY HASH</h3>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="POST" action="ComprobarHash">
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="Password" required />
                </div>
                <div class="mb-3">
                    <label for="hash" class="form-label">Hash</label>
                    <input type="text" class="form-control" id="hash" name="Hash" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Comprobar</button>
            </form>
            <br>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
        </div>
    </div>
</div>

