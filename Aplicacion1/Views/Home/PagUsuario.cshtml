@model Aplicacion1.Models.Usuario

@{
    ViewData["Title"] = "PagUsuario";
}

<div class="container mt-5">
    <h3 class="text-center">PÁGINA USUARIO</h3>
    <br>
    @*
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
	    <h3>@TempData["InfoMessage"]</h3>
    }
    *@

    <h5 class="text-center">Detalles del Usuario</h5>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    else
    {
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Fecha Baja</th>
                    <th>Observaciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.idUsuario</td>
                    <td>@Model.nombre</td>
                    <td>@Model.email</td>
                    <td>@Model.rol</td>
                    <td>@(Model.estado ? "Inactivo" : "Activo")</td>
                    <td>@(Model.fechaBaja.HasValue ? Model.fechaBaja.Value.ToString("dd/MM/yyyy") : "-")</td>
                    <td>@(!string.IsNullOrWhiteSpace(Model.observaciones) ? Model.observaciones : "-")</td>
                </tr>
            </tbody>
        </table>
    }
</div>
